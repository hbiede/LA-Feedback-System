{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": "src",
    "rootDir": "."
  },
  "include": [
    "webpack.config.ts",
    "src",
    "src/**/*",
    "src/**/**/*",
    "src/**/**/**/*",
    "src/**/**/**/**/*",
    "src/**/**/**/**/**/*"
  ]
}
